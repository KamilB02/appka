<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginStart="92dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="519dp" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="16dp"
        android:text="Dodaj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="16dp"
        android:text="Anuluj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/uploadImage"
        android:layout_width="114dp"
        android:layout_height="91dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/uploadButton"
        app:layout_constraintStart_toEndOf="@+id/progressBar" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="19dp"
        android:layout_weight="0.6"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Data zakupu"
        android:inputType="date"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sklep" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_weight="0.6"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Cena w zÅ‚"
        android:inputType="numberDecimal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="381dp" />

    <EditText
        android:id="@+id/uploadCaption"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.6"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Nazwa produktu"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadImage" />

    <EditText
        android:id="@+id/Sklep"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.6"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Nazwa sklepu"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadCaption" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gwarancja"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="491dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="13dp"
        android:text="Zwrot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="221dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="127dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>